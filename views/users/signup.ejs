<% layout('/layouts/boilerplate') %>

<body>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input name="username"  class="form-control" required id="username">
            <div class="valid-feedback">
                 looks good
            </div>
            <div class="invalid-feedback">
                Enter UserName
            </div>


        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input name="email"  class="form-control" required id="email" type="email">
            
            <div class="invalid-feedback">
                Enter Valid email
            </div>


        </div>

         <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password"  class="form-control" required id="password" type="password">
            
            <div class="invalid-feedback">
                Enter Valid Password
            </div>


        </div>
        <button class="btn btn-dark">SignUp</button>
        
            </form>
        </div>
    </div>

</body>